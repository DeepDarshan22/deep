{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "mspOfferName": {
      "type": "string",
      "metadata": {
        "description": "Specify a unique name for your offer"
      }
    },
    "mspOfferDescription": {
      "type": "string",
      "metadata": {
        "description": "Name of the Managed Service Provider offering"
      }
    },
    "managedByTenantId": {
      "type": "string",
      "metadata": {
        "description": "Specify the tenant id of the Managed Service Provider"
      }
    },
    "token": {
      "type": "securestring",
      "metadata": {
        "description": "Azure AD Authentication Token"
      }
    },
    "mpnid": {
      "type": "string",
      "metadata": {
        "description": "Managed Partner ID"
      }
    }
  },
  "variables": {
    "mspRegistrationName": "[guid(parameters('mspOfferName'))]",
    "mspAssignmentName": "[guid(parameters('mspOfferName'))]",
    "putRequest": {
      "method": "PUT",
      "url": "https://management.azure.com/providers/microsoft.managementpartner/partners/parameters('mpnid')?api-version=2018-02-01",
      "headers": {
        "Authorization": "[concat('Bearer ', parameters('token'))]",
        "Content-Type": "application/json"
      },
      "data": {
        "partnerId": "[parameters('mpnid')]"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ManagedServices/registrationDefinitions",
      "apiVersion": "2019-09-01",
      "name": "[variables('mspRegistrationName')]",
      "properties": {
        "registrationDefinitionName": "[parameters('mspOfferName')]",
        "description": "[parameters('mspOfferDescription')]",
        "managedByTenantId": "[parameters('managedByTenantId')]"
      }
    },
    {
      "type": "Microsoft.ManagedServices/registrationAssignments",
      "apiVersion": "2019-09-01",
      "name": "[variables('mspAssignmentName')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedServices/registrationDefinitions/', variables('mspRegistrationName'))]"
      ],
      "properties": {
        "registrationDefinitionId": "[resourceId('Microsoft.ManagedServices/registrationDefinitions/', variables('mspRegistrationName'))]"
      }
    },
    {
      "type": "http",
      "apiVersion": "2020-01-01",
      "name": "putRequest",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedServices/registrationAssignments', variables('mspAssignmentName'))]"
      ],
      "properties": {
        "method": "[variables('putRequest').method]",
        "uri": "[variables('putRequest').url]",
        "headers": "[variables('putRequest').headers]",
        "body": "[json(variables('putRequest').data)]"
      }
    }
  ],
  "outputs": {
    "mspOfferName": {
      "type": "string",
      "value": "[concat('Managed by', ' ', parameters('mspOfferName'))]"
    }
  }
}
